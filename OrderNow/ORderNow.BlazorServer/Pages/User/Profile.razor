@page "/user/profile"
@layout UserLayout

<h3>Profile</h3>

<div class="flex-container">
	<div class="top-bar">
		<div class="btn-action">
			<button name="SwitchProfile">Perfil Comercial</button>
		</div>
		<div class="profile-img">
			<img src="~/assets/img/team/1.jpg" alt="" />
		</div>
		<p class="last-connection">Ultima Conexion 12/05/2022</p>
	</div>

	<div class="favorites">
		<div class="favorites-search-bar">
			<p class="title">Mis Favoritos</p>
			<input type="text" value="Search here" class="search-box" />
			<button class="filter-btn">Filter</button>
		</div>
		<table class="favorites-list">
			<thead>
				<tr>
					<th>
						<p class="fav-title">Cliente</p>
					</th>
					<th>
						<p class="fav-title">Estado</p>
					</th>
					<th>
						<p class="fav-title">Demora actual</p>
					</th>
					<th>
						<p class="fav-title">Items</p>
					</th>
					<th>
						<p class="fav-title">Total</p>
					</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						<div>

							<img src="~/assets/img/team/2.jpg" alt="" />
							<p class="name">Emiliano</p>
						</div>
					</td>
					<td>
						<div class="status-box">
							<p>In process</p>
						</div>
					</td>
					<td>
						<div class="status-progress-bar">
						</div>
						<p class="order-time-delay">28 min</p>
					</td>
					<td>
						<p class="order-items">10</p>
					</td>
					<td>
						<p class="order-amount">$589,68</p>
					</td>
				</tr>
			</tbody>
		</table>

	</div>

</div>

