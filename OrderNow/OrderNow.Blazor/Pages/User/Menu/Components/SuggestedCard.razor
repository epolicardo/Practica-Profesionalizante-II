<div class="card-group">
    <div class="card">
        <h2 class="card-header" style="text-align: center;">@Title</h2>
        @foreach (var item in list)
        {
            <div class="card" style="width: 30rem; margin:1rem">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-shop-window m-4" style="font-size:2rem;"></i>@item.Name
                        <a href="/business/@item.ContractURL">
                            <i class="bi bi-arrow-right-square " style="font-size:2rem; margin-left:50px;"></i>
                        </a>
                    </h5>
                    <p class="card-text">@item.Address?.Street @item.Address?.Number</p>
                </div>
            </div>
        }
    </div>
</div>
@code {
    [Parameter]
    public List<Business>? list { get; set; }
    [ParameterAttribute]
    public string? Title { get; set; }

}
