
@inject NavigationManager NavManager

<div id="card">
	<div id="card-content">
		<div id="card-title">
			<h2>LOGIN</h2>
			<div class="underline-title"></div>
		</div>
		<EditForm class="form" Model="@credentials" OnValidSubmit="@HandleValidSubmit">
			<label for="user-email" style="padding-top:13px">
				&nbsp;Email
			</label>
			<InputText @bind-Value="credentials.email" id="user-email" class="form-content"  />
			<div class="form-border"></div>
			<label for="user-password" style="padding-top:22px">
				&nbsp;Password
			</label>
			<InputText id="user-password" @bind-Value="credentials.password" class="form-content" />
			<div class="form-border"></div>
			<a href="#">
				<legend id="forgot-pass">Forgot password?</legend>
			</a>
			<input id="submit-btn" type="submit" name="submit" value="LOGIN" />
			<a href="#" id="signup">Don't have account yet?</a>
		</EditForm>
	</div>
</div>

@code {
    public LoginCredentials credentials = new LoginCredentials();

	protected void RedirectToPage()
	{
		NavManager.NavigateTo("admin/dashboard");
	}

	private void HandleValidSubmit()
	{
		NavManager.NavigateTo("admin/dashboard");

	}

	public class LoginCredentials{
		public string? email { get; set; }
		public string? password { get; set; }
	}
}